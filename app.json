{
  "expo": {
    "name": "Shramik Seva",
    "slug": "ShramikSevaApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "shramiksevaapp",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shramikseva.app"
    },
    "android": {
      "package": "com.shramikseva.app",
      "adaptiveIcon": {
        "backgroundColor": "#FF5722",
        "foregroundImage": "./assets/images/icon.png"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Shramik Seva to use your location for finding nearby jobs."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Shramik Seva to access your camera for work verification."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF5722"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}